@model baberShop.Models.ACCOUNT_USER



@{
    ViewBag.Title = "NewPassword";
    Layout = "";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <title>Đăng nhập</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Downloads/imgLogin/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/fontsLogin/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/cssLogin/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/cssLogin/main.css">
    <!--===============================================================================================-->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="https://cdn-icons-png.flaticon.com/512/2535/2535531.png" alt="IMG">
                </div>

                @using (Html.BeginForm("NewPassword", "Auth", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

            <div class="login100-form">
                <span class="login100-form-title">
                    Nhập mật khẩu mới
                </span>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="text-danger text-center p-2 m-3 rounded" role="alert">

                    @ViewBag.error

                </div>
               
                <div class="wrap-input100">

                    @Html.EditorFor(model => model.PASSWORD_USER, new { htmlAttributes = new { placeholder = " New Password", type = "password", @class = "input100" } })
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                    @Html.ValidationMessageFor(model => model.PASSWORD_USER, "", new { @class = "text-danger" })
                </div>

                <div class="container-login100-form-btn">
                    <input type="submit" value="Xác nhận" class="login100-form-btn" />
                </div>
                @{ 
                    if(ViewBag.success != null)
                    {
                        <script>
                            Swal.fire({
                                position: 'center',
                                icon: 'success',
                                title: 'Thay đổi mật khẩu thành công!',
                                showConfirmButton: false,
                                timer: 1500
                            }).then(() => {
                                window.location.replace("/auth/login")
                            })
                        </script>
                    }
                }

                <div class="text-center p-t-5">
                    <a class="txt2" href="/auth/forgot">
                        <i class="fa fa-long-arrow-left m-l-5" aria-hidden="true"></i>
                        Quay lại
                    </a>
                </div>
            </div>


                }

               
            </div>
        </div>
    </div>


    <!--===============================================================================================-->
    <script src="~/Content/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <!--===============================================================================================-->
    <script src="~/Scripts/jsLogin/main.js"></script>

</body>
</html>