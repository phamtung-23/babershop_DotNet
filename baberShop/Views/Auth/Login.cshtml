    <link rel="stylesheet" type="text/css" href="~/Content/cssLogin/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/Downloads/imgLogin/img-01.png" alt="IMG">
                </div>

                @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

            <div class="login100-form">
                <span class="login100-form-title">
                    Đăng nhập tài khoản
                </span>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="text-danger text-center p-2 m-3 rounded" role="alert">

                    @ViewBag.error

                </div>

                <div class="wrap-input100">
                    @Html.EditorFor(model => model.USERNAME, new { htmlAttributes = new { placeholder = "Username", @class = "input100" } })
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </span>
                    @Html.ValidationMessageFor(model => model.USERNAME, "", new { @class = "text-danger" })
                </div>

                <div class="wrap-input100">

                    @Html.EditorFor(model => model.PASSWORD_USER, new { htmlAttributes = new { placeholder = "Password", type = "password", @class = "input100" } })
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                    @Html.ValidationMessageFor(model => model.PASSWORD_USER, "", new { @class = "text-danger" })
                </div>

                <div class="container-login100-form-btn">
                    <input type="submit" value="Đăng nhập" class="login100-form-btn" />
                </div>

                <div class="text-center p-t-12">
                    <span class="txt1">
                        Forgot
                    </span>
                    <a class="txt2" href="/auth/fogot">
                         Password?
                    </a>
                </div>

                <div class="text-center p-t-5">
                    <a class="txt2" href="/auth/register">
                        Create your Account
                        <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                    </a>
                </div>
            </div>


                }

