@model IEnumerable<baberShop.Models.BOOKING>


    @{
        ViewBag.Title = "Login";
        Layout = "~/Views/Shared/Layout-profile.cshtml";
    }


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/cssProfile/styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Profile</title>
</head>
<body>
    <div class="container-profile">
        <figure class="snip1515 col-lg-4">
            <div class="profile-image"><img src="https://i.pinimg.com/564x/ff/31/e3/ff31e34ab5108f7397e101f1e87f8c50.jpg" alt="sample47" /></div>
            <figcaption>
                <h3>@Session["USERNAME"].ToString()</h3>
                <h4>Cusumer</h4>
                <p>Xin chào quý khách hàng, chúng tôi sẽ đem lại những trải nghiệm tốt nhất ở đây.</p>
                <div class="icons">

                    <a href="#"><img class="m-3" width="30" height="30" src="https://i.pinimg.com/originals/d2/97/9b/d2979bd98ea37dd3ba4d31c20828ceed.png" alt=""/></a>
                    <a href="#"><img class="m-3" width="30" height="30" src="https://cdn-icons-png.flaticon.com/512/4698/4698066.png" alt="" /></a>
                    <a href="#"><img class="m-3" width="30" height="30" src="https://toppng.com/uploads/preview/phone-icon-gold-1154984078687y856ntxr.png" alt="" /></a>
                </div>

                <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#exampleModal">Chỉnh sữa thông tin các nhân</button>
                

            </figcaption>
        </figure>

        <div class="booking-list col-lg-8">
            <div class="m-3 text-center title-booking">Lịch sử đặt chổ</div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Tên</th>
                        <th scope="col">SDT</th>
                        <th scope="col">Thời gian</th>
                        <th scope="col">Ngày</th>
                        <th scope="col">Trang thái</th>
                        <th scope="col">Công cụ</th>

                    </tr>
                </thead>
                <tbody>
                    
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.NAME_BOOK</td>
                        <td>@item.PHONE_BOOK</td>
                        <td>@item.TIME_BOOKING</td>
                        <td>@item.DATE_BOOKING</td>
                        <td><span class="badge badge-success p-2">Đặt thành công</span></td>
                        <td>
                            <button type="button" class="btn btn-danger">Hủy</button>
                        </td>
                    </tr>
                    }
                    

                </tbody>
            </table>
        </div>
    </div>

    @* Dialog form add infomation personal*@    
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Cập nhật thông tin các nhân</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="email" class="col-form-label">Email</label>
                            <input type="text" class="form-control" placeholder="Nhập email ...." id="email">
                        </div>

                        <div class="form-group">
                            <label for="Phone" class="col-form-label">Phone</label>
                            <input type="text" class="form-control" placeholder="Nhập Số điện thoại ...." id="phone">
                        </div>

                        <div class="form-group">
                            <label for="address" class="col-form-label">Address</label>
                            <input type="text" class="form-control" placeholder="Nhập địa chỉ ...." id="address">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Hủy</button>
                    <button type="button" class="btn btn-info">Cập nhật</button>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jsProfile/main.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>