@model IEnumerable<baberShop.Models.NHANVIEN>
@{
    ViewBag.Title = "List Employee";
    Layout = "~/Views/Shared/Layout-profile.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/cssProfile/styles.css">
    <title>List Employee</title>
</head>
<body>

    <div class="container-fluid">
        <h3 class="mt-3 ml-3 w-100 text-center"> List Employee <span class="text-warning">BaberShop</span></h3>
        <hr />
        <div class="row">

            @{
                foreach (var item in Model)
                {
                    <div class="col-lg-6 d-flex justify-content-center">
                        <div class="card w-75 m-3 p-3 card-wrapper">
                            <img class="img-card" src="@item.AVT" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">@item.NAME_NHANVIEN</h5>
                                <p class="card-text">@item.DESCRIPSTION_NV</p>
                                <a href="/HomeBaberShop/employeeDetail/@item.ID_NHANVIEN" class="btn btn-update-info">View detail</a>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous">
    </script>
</body>
</html>