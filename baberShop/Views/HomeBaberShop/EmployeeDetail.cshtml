@model IEnumerable<baberShop.Models.NHANVIEN>

@{
    ViewBag.Title = "Detail_Employee";
    Layout = "~/Views/Shared/Layout-profile.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/cssDetailEmployee/styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container">
        <section class="product row">
            <div class="product__info col-lg-6 col-sm-12">
                <div class="title">Thông tin chi tiết - Nhân viên</div>
                <div class="title">
                    <h1>@Model.FirstOrDefault().NAME_NHANVIEN</h1>
                    <span>Giới tính: @Model.FirstOrDefault().SEX</span>
                </div>
                <div class="price">
                    Ký năng:  <span>@Model.FirstOrDefault().SKILL</span>
                </div>
                <div class="variant">
                    <h3>Liên hệ: </h3>
                    <ul class="d-flex justify-content-around">
                        <li>
                            <a href="@Model.FirstOrDefault().LINK_FB">
                                <img class="img-contact" src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/b8/2021_Facebook_icon.svg/2048px-2021_Facebook_icon.svg.png" alt="" />
                            </a>
                        </li>
                        <li>
                            <a href="@Model.FirstOrDefault().LINK_INSTAGRAM">
                                <img class="img-contact" src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/58/Instagram-Icon.png/1025px-Instagram-Icon.png" alt="" />
                            </a>
                        </li>
                        <li>
                            <a href="@Model.FirstOrDefault().PHONE">
                                <img class="img-contact" src="https://upload.wikimedia.org/wikipedia/commons/thumb/8/83/Circle-icons-phone.svg/1200px-Circle-icons-phone.svg.png" alt="" />
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="description">
                    <h3>Mô tả</h3>
                    <ul>
                        <li class="description-content">@Model.FirstOrDefault().DESCRIPSTION_NV</li>
                    </ul>
                </div>
            </div>
            <div class="product__photo col-lg-6 col-sm-12">
                <div class="photo-container">
                    <div class="photo-main">
                        <img width="600" src="@Model.FirstOrDefault().AVT" alt="green apple slice">
                    </div>
                </div>
            </div>
        </section>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>
